<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".segundo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_200" >

        <Button
            android:id="@+id/btnGerar"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:backgroundTint="#575757"
            android:onClick="gerar"
            android:text="Gerarr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirmar"
            app:layout_constraintVertical_bias="0.050000012" />

        <EditText
            android:id="@+id/entrada"
            android:layout_width="208dp"
            android:layout_height="53dp"
            android:background="#C1C1C1"
            android:ems="10"
            android:hint="Adivinhe"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="#5C5C5C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.110000014" />

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:backgroundTint="#575757"
            android:onClick="confirmar"
            android:text="Confirmar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entrada"
            app:layout_constraintVertical_bias="0.04000002" />

        <TextView
            android:id="@+id/saida"
            android:layout_width="298dp"
            android:layout_height="108dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGerar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>